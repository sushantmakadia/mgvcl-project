<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:id="@+id/l1"

    tools:context="com.example.sushant.parden.com_10">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/c28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="@string/strc28"
            android:textSize="15dp" />

        <RadioGroup
            android:id="@+id/rg28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/c28"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape"
            android:orientation="vertical"

            >

            <RadioButton
                android:id="@+id/rb28_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:buttonTint="@color/colorPrimary"
                android:text="@string/stra21_1"
                android:textColor="#000000"

                />

            <RadioButton
                android:id="@+id/rb28_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/rb4"
                android:buttonTint="@color/colorPrimary"
                android:text="@string/stra21_2"
                android:textColor="#000000"

                />

            <RadioButton
                android:id="@+id/rb28_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:buttonTint="@color/colorPrimary"
                android:text="@string/stra21_3"
                android:textColor="#000000"

                />

            <RadioButton
                android:id="@+id/rb28_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:buttonTint="@color/colorPrimary"
                android:text="@string/stra21_4"

                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/rb28_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:buttonTint="@color/colorPrimary"
                android:text="@string/stra21_5"
                android:textColor="#000000" />
        </RadioGroup>
        <TextView
            android:id="@+id/c29_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="300dp"
            android:text="@string/strc29_1"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/c29_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c29_1"
            android:layout_marginLeft="10dp"
            android:text="@string/strc29_2"
            android:textSize="15dp" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/c29_2"
            android:orientation="vertical"
            android:background="@drawable/shape"
            android:layout_marginTop="10dp"
            android:id="@+id/rg29"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:textColor="#000000"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/square"
                        android:text=" "
                        android:textAlignment="center"
                        android:id="@+id/box1"
                        android:layout_marginLeft="30dp"
                        android:buttonTint="@color/colorPrimary"
                        />

                    <TextView
                        android:textColor="#000000"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp" android:textAlignment="center"
                        android:background="@drawable/square"
                        android:text=" "
                        android:id="@+id/box2"
                        android:layout_marginLeft="30dp"
                        android:buttonTint="@color/colorPrimary"
                        />
                    <TextView
                        android:textColor="#000000"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text=" "
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/square"
                        android:id="@+id/box3"
                        android:layout_marginLeft="30dp"
                        android:buttonTint="@color/colorPrimary"
                        />
                    <TextView
                        android:textColor="#000000"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text=" "
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/square"
                        android:id="@+id/box4"
                        android:layout_marginLeft="30dp"
                        android:buttonTint="@color/colorPrimary"
                        />
                    <TextView
                        android:textColor="#000000"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text=" "
                        android:layout_marginTop="5dp"
                        android:background="@drawable/square"
                        android:id="@+id/box5"
                        android:textAlignment="center"
                        android:layout_marginLeft="30dp"
                        android:buttonTint="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/box6"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:textAlignment="center"
                        android:background="@drawable/square"
                        android:buttonTint="@color/colorPrimary"
                        android:text=" "
                        android:textColor="#000000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/a35rb1"
                        android:id="@+id/a35rb1"
                        android:buttonTint="@color/colorPrimary"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="30dp"
                        android:text="@string/a35rb2"
                        android:id="@+id/a35rb2"
                        android:buttonTint="@color/colorPrimary"
                        />
                    <TextView
                        android:textColor="#000000"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/a35rb3"
                        android:id="@+id/a35rb3"
                        android:layout_marginLeft="30dp"
                        android:buttonTint="@color/colorPrimary"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="30dp"
                        android:text="@string/a35rb4"
                        android:id="@+id/a35rb4"
                        android:buttonTint="@color/colorPrimary"
                        />
                    <TextView
                        android:textColor="#000000"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/a35rb5"
                        android:id="@+id/a35rb5"
                        android:layout_marginLeft="30dp"
                        android:buttonTint="@color/colorPrimary"
                        />
                    <TextView
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/a35rb6"
                        android:id="@+id/a35rb6"
                        android:layout_marginLeft="30dp"
                        android:buttonTint="@color/colorPrimary"
                        />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:id="@+id/reset"
                android:layout_marginLeft="130dp"
                />
        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/b1"
            android:layout_below="@+id/rg29"
            android:background="@drawable/shape"
            android:hint="@string/next"
            android:id="@+id/b2"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="50dp"
           />

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>