                android:layout_marginLeft="30dp"
                android:text="@string/stra7_2"
                android:buttonTint="@color/colorPrimary"

                />
            <RadioButton
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stra7_3"
                android:id="@+id/rb36_3"
                android:layout_marginLeft="30dp"
                android:buttonTint="@color/colorPrimary"

                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/rb36_4"
                android:layout_marginLeft="30dp"
                android:text="@string/stra7_4"

                android:buttonTint="@color/colorPrimary"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb36_5"
                android:textColor="#000000"
                android:layout_marginLeft="30dp"
                android:text="@string/stra7_5"

                android:buttonTint="@color/colorPrimary"
                />

        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/b1"
            android:background="@drawable/shape"
            android:layout_marginBottom="100dp"
            android:hint="@string/next"
            android:layout_below="@id/rg36"
            android:id="@+id/b2"
            android:layout_marginTop="50dp"
           />
</RelativeLayout>
    </ScrollView>
</RelativeLayout>