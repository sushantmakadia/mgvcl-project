<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:id="@+id/l1"

    tools:context="com.example.sushant.parden.MainActivity">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/c46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="@string/strc46"
            android:textSize="15dp" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/c46"
            android:orientation="vertical"
            android:background="@drawable/shape"
            android:layout_marginTop="10dp"
            android:id="@+id/rg46"
            android:layout_marginBottom="5dp"

            >
        <RadioButton
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stra46_1"
            android:id="@+id/rb46_1"
            android:layout_marginLeft="30dp"
            android:buttonTint="@color/colorPrimary"

            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/rb46_2"
            android:layout_toRightOf="@id/rb4"
            android:layout_marginLeft="30dp"
            android:text="@string/stra46_2"
            android:buttonTint="@color/colorPrimary"

            />
        <RadioButton
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stra46_3"
            android:id="@+id/rb46_3"
            android:layout_marginLeft="30dp"
            android:buttonTint="@color/colorPrimary"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/rb46_4"
            android:layout_marginLeft="30dp"
            android:text="@string/stra46_4"

            android:buttonTint="@color/colorPrimary"
            />
        </RadioGroup>
        <TextView
            android:id="@+id/c47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="250dp"
            android:text="@string/strc47"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edt47"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/shape"
            android:inputType="textMultiLine"

            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/c48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="400dp"
            android:text="@string/strc48"
            android:textSize="15dp" />
        <RatingBar
            android:id="@+id/rt48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c48"
            android:layout_marginTop="20dp"
            style="?android:attr/ratingBarStyleIndicator"
            android:numStars="10"
            android:stepSize="1"
            android:isIndicator="false" /><![CDATA[
           />

        ]]>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/b1"
            android:layout_marginBottom="100dp"
            android:background="@drawable/shape"
            android:hint="submit"
            android:id="@+id/b2"
            android:layout_below="@id/rt48"
            android:layout_marginTop="50dp"
          />

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>